@model IEnumerable<TiendaRestaurant.Models.Clases.GridTables>
@using GridMvc.Html
@{
    ViewBag.Title = "PanelUsuario";
    Layout = "~/Views/Shared/_MasterPage.cshtml";
}

<h2>PanelUsuario</h2>

<h3>Productos</h3>
<div class="code-cut">
    @Html.Grid(Model).Columns(Columns =>
    {
        Columns.Add(c => c.idProducto).Titled("Id").Filterable(true);
        Columns.Add(c => c.nombreProducto).Titled("nombre").Filterable(true);
        Columns.Add(c => c.precio).Titled("Precio").Filterable(true);
        Columns.Add(c => c.stock).Titled("Stock").Filterable(true);
        Columns.Add().Encoded(false).Sanitized(false).SetWidth(30).
        RenderValueAs(o => Html.ActionLink("Edit", "Edit", new { id = o.idProducto }));
    }).WithPaging(10).Sortable(true);
</div>

<h3>Usuarios</h3>
<div class="code-cut">
    @Html.Grid(Model).Columns(Columns =>
            {
                Columns.Add(d => d.usuario.idUsuario).Titled("Id").Filterable(true);
                Columns.Add(d => d.usuario.nombreUsuario).Titled("Nombre").Filterable(true);
                Columns.Add(d => d.usuario.password).Titled("password").Filterable(true);
                Columns.Add(d => d.usuario.pnombre).Titled("Primer nombre").Filterable(true);
                Columns.Add(d => d.usuario.snombre).Titled("Segundo nombre").Filterable(true);
                Columns.Add(d => d.usuario.apat).Titled("Apellido paterno").Filterable(true);
                Columns.Add(d => d.usuario.amat).Titled("Materno").Filterable(true);
                Columns.Add(d => d.usuario.email).Titled("Mail").Filterable(true);
                Columns.Add(d => d.usuario.fechaRegistro).Titled("fecha registro").Filterable(true);
                Columns.Add(d => d.usuario.tipoUsuario).Titled("Tipo").Filterable(true);
                Columns.Add().Encoded(false).Sanitized(false).SetWidth(30).
                RenderValueAs(o => Html.ActionLink("Edit", "Edit", new { id = o.idProducto }));
            }).WithPaging(10).Sortable(true);
</div>



