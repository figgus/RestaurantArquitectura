@using TiendaRestaurant.Models;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MasterPage.cshtml";
}

<h2>Bienvenido a InsertCoin</h2>
<h3>Noticias relacionadas</h3>

@{
    foreach (Noticias noticias in ViewBag.Notis)
    {
        <div class="col-md-2 column productbox">
            <img src="http://placehold.it/460x250/e67e22/ffffff&text=HTML5" class="img-responsive">
            <div class="producttitle">@Html.Raw(noticias.textoNoticia)</div>
            <div class="productprice"><div class="pull-right"><a href="" id="btnComprar" class="btn btn-danger btn-sm" role="button">Ver detalles</a></div><div class="pricetext"></div></div>
        </div>
    }
}
