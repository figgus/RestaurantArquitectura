<script type="text/javascript">
    $(document).ready(
        function () {
            $("#btnComprar").click(
                function () {
                    $.ajax({
                        url: '@Url.Action("validarLogin", "Tienda")',
                        type: 'POST',
                        success: function (result) {
                            if (result === 'true') {
                                window.location.href = "/Tienda/PanelUsuario";
                            }
                            else {
                                $("#msj").show(2000).delay(2000).fadeOut(2000);
                            }
                        }
                    }
                    );
                }

            );
        }
    );
</script>

