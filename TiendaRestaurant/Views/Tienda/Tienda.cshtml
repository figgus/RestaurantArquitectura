    {
        <div class="col-md-2 column productbox">
            <img src="http://placehold.it/460x250/e67e22/ffffff&text=HTML5" class="img-responsive">
            <div class="producttitle">@Html.Raw(prod.nombreProducto)</div>
            <div class="productprice"><div class="pull-right"><a href="/Tienda/DetallesProducto?id=@prod.idProducto" id="btnComprar" class="btn btn-danger btn-sm" role="button">Ver detalles</a></div><div class="pricetext">@Html.Raw(prod.precio)</div></div>
