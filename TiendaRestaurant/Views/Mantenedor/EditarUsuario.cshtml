
@{
    ViewBag.Title = "EditarUsuario";
    Layout = "~/Views/Shared/_MasterPage.cshtml";
}

<h2>EditarUsuario</h2>
<script>
    $(document).ready(
        function () {
            $("#msj").hide();
            $("#btnGuardar").click(
                function () {
                    $.ajax({
                        url: '@Url.Action("Actualizar", "Mantenedor")',
                        type: 'POST',
                        data: $("#formulario").serialize(),
                        success: function (result) {
                            //alert(result);
                            if (result === 'true') {
                                $("#msj").show(2000).delay(2000).fadeOut(2000);
                                setTimeout(function () { $(location).attr('href', '@Url.Action("PanelUsuario", "Tienda")'); }, 4000);
                            }
                            else {
                                alert(result);
                            }
                        }
                    }
                    );
                }

            );
        }
    );
</script>

<center>
    <div id="msj" class="alert alert-success">
        Registro ingresado con exito
    </div>
    <form id="formulario">
        <input type="hidden" name="bd" id="bd" value="Usuarios" />
        <table>
            <tr>
                <td></td>
                <td></td>
            </tr>
            <tr>

                <td>idUsuario</td>
                <td><input class="form-control" type="text" id="idUsuario" name="idUsuario" value="@Request["id"]" readonly /></td>
            </tr>
            <tr>

                <td>nombreUsuario</td>
                <td><input class="form-control" type="text" id="nombreUsuario" name="nombreUsuario" value="@Request["username"]" /></td>
            </tr>
            <tr>
                <td>
                    Password
                </td>
                <td>
                    <input class="form-control" type="text" value="@Request["password"]" id="password" name="password" />
                </td>
            </tr>
            <tr>
                <td>
                    Primer nombre
                </td>
                <td>
                    <input class="form-control" type="text" value="@Request["pnombre"]" id="pnombre" name="pnombre" />
                </td>
            </tr>
            <tr>
                <td>
                    Segundo nombre
                </td>
                <td>
                    <input class="form-control" type="text" value="@Request["snombre"]" id="snombre" name="snombre" />
                </td>
            </tr>
            <tr>
                <td>
                    Apellido paterno
                </td>
                <td>
                    <input class="form-control" type="text" value="@Request["apat"]" id="apat" name="apat" />
                </td>
            </tr>
            <tr>
                <td>
                    Apellido Materno
                </td>
                <td>
                    <input class="form-control" type="text" value="@Request["amat"]" id="amat" name="amat" />
                </td>
            </tr>
            <tr>
                <td>
                    Fecha de registro
                </td>
                <td>
                    <input class="form-control" type="date" value="@Request["fecha"]" id="fecha" name="fecha" />
                </td>
            </tr>
            <tr>
                <td>
                    Tipo de usuario
                </td>
                <td>
                    <input class="form-control" type="text" value="@Request["tipo"]" id="tipoUsuario" name="tipoUsuario" />
                </td>
            </tr>
            <tr>
                <td>
                    Email
                </td>
                <td>
                    <input class="form-control" type="text" value="@Request["email"]" id="email" name="email" />
                </td>
            </tr>
            <tr>
                <td></td>
                <td><input type="button" class="btn btn-primary" id="btnGuardar" name="btnGuardar" value="Guardar" /></td>
            </tr>
        </table>
    </form>
</center>

