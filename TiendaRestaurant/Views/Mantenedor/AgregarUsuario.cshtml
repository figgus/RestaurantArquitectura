
@{
    ViewBag.Title = "AgregarUsuario";
    Layout = "~/Views/Shared/_MasterPage.cshtml";
}

<h2>AgregarUsuario</h2>


<script>
    $(document).ready(
        function () {
            $("#msj").hide();
            $("#btnGuardar").click(
                function () {
                    $.ajax({
                        url: '@Url.Action("Guardar", "Mantenedor")',
                        type: 'POST',
                        data: $("#formulario").serialize(),
                        success: function (result) {
                            //alert(result);
                            if (result === 'true') {
                                $("#msj").show(2000).delay(2000).fadeOut(2000);
                                setTimeout(function () { $(location).attr('href', '@Url.Action("PanelUsuario", "Tienda")'); }, 4000);
                            }
                            else {
                                alert('problema');
                            }
                        }
                    }
                    );
                }

            );
        }
    );
</script>
<body>
    <div id="msj" class="alert alert-success">
        Datos Ingresados
    </div>
    <center>
        <form id="formulario">
            <input type="hidden" name="bd" id="bd" value="Usuarios" />
            <table>
                <tr>
                    <td></td>
                    <td></td>
                </tr>
                <tr>

                    <td>nombre de usuario</td>
                    <td><input class="form-control" type="text" id="nombreUsuario" name="nombreUsuario" /></td>
                </tr>
                <tr>
                    <td>
                        password
                    </td>
                    <td>
                        <input class="form-control" type="text" id="password" name="password" />
                    </td>
                </tr>
                <tr>
                    <td>
                        primer nombre
                    </td>
                    <td>
                        <input class="form-control" type="text" id="pnombre" name="pnombre" />
                    </td>
                </tr>
                <tr>
                    <td>
                        segundo nombre
                    </td>
                    <td>
                        <input class="form-control" type="text" id="snombre" name="snombre" />
                    </td>
                </tr>
                <tr>
                    <td>
                        apellido paterno
                    </td>
                    <td>
                        <input class="form-control" type="text" id="apat" name="apat" />
                    </td>
                </tr>
                <tr>
                    <td>
                        apellido materno
                    </td>
                    <td>
                        <input class="form-control" type="text" id="amat" name="amat" />
                    </td>
                </tr>
                <tr>
                    <td>
                        Tipo de usuario
                    </td>
                    <td>
                        <select id="tipo" name="tipo" class="form-control">
                            <option selected value="Administrador">Administrador</option>
                            <option value="Cliente">Cliente</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td>
                        Email
                    </td>
                    <td>
                        <input class="form-control" type="text" id="email" name="email" />
                    </td>
                </tr>

                <tr>
                    <td></td>
                    <td><input type="button" class="btn btn-primary" id="btnGuardar" name="btnGuardar" value="Guardar" /></td>
                </tr>
            </table>
        </form>
    </center>
</body>